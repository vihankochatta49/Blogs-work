<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog site</title>
    <style>
      * {
        margin: 0px;
        padding: 0px;
      }

      body {
        font-family: sans-serif;
      }

      .nav {
        display: flex;
        max-width: 100%;
        align-items: center;
        justify-content: space-between;
        box-shadow: 15px 2px 2px white;
        border-bottom: 2px solid black;
        padding: 10px;
        height: 70px;
      }

      .head {
        font-size: 4rem;
        color: black;
        font-weight: 500;
        font-family: monospace;
      }

      .dropdown {
        position: relative;
        display: inline-block;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        right: 0px;
        top: 50px;
        background-color: #2d2d2d;
        min-width: 100px;
        padding: 8px 0px;
        z-index: 1;
        border-radius: 10px;
      }

      .arrow-top:after {
        content: " ";
        position: absolute;
        right: 19px;
        top: -15px;
        border-top: none;
        border-right: 15px solid transparent;
        border-left: 15px solid transparent;
        border-bottom: 15px solid #2d2d2d;
      }

      .dropdown:hover .dropdown-content {
        display: block;
      }

      .dropdown-content1 {
        display: none;
        position: absolute;
        left: -17px;
        top: 45px;
        background-color: #2d2d2d;
        min-width: 100px;
        padding: 8px 0px;
        z-index: 1;
        border-radius: 10px;
      }

      .arrow-top1:after {
        content: " ";
        position: absolute;
        left: 15px;
        top: -15px;
        border-top: none;
        border-right: 15px solid transparent;
        border-left: 15px solid transparent;
        border-bottom: 15px solid #2d2d2d;
      }

      .dropdown:hover .dropdown-content1 {
        display: block;
      }

      .home {
        font-size: 2em;
        color: #7a7893;
        text-decoration: none;
        margin-right: 20px;
      }

      .home:hover {
        color: black;
      }

      .userInfo {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 15px 15px 0px;
      }

      .user-name {
        font-size: 25px;
        font-family: monospace;
      }

      .user-posts {
        font-size: 20px;
      }

      .half {
        display: flex;
      }

      .blogs {
        display: flex;
        align-items: start;
        justify-content: center;
        flex-direction: column;
        margin: 20px 10px 10px 10px;
      }

      .bai {
        width: 50%;
        background-color: white;
        padding: 15px;
        margin-top: 25px;
      }

      .blog {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
      }

      .blog-content {
        width: 100%;
        display: flex;
        align-items: flex-start;
        flex-direction: column;
      }

      .written-by {
        font-size: 14px;
        margin-bottom: 8px;
        font-family: monospace;
        font-weight: 600;
      }

      .head1 {
        width: 85%;
        margin-bottom: 10px;
        color: black;
        font-size: 2em;
        word-spacing: -5px;
        font-family: monospace;
        text-decoration: none;
        font-weight: 600;
      }

      .head1:hover {
        text-decoration: underline;
      }

      .date {
        color: darkslategray;
        margin: 3px 0px 8px;
        font-size: 0.7rem;
      }

      .para {
        width: 85%;
        font-size: 1.3rem;
      }

      .like {
        font-size: 1rem;
        margin-top: 10px;
        color: #7a7893;
      }

      .btns {
        display: flex;
      }

      .btn {
        margin: 5px 0px 0px -1px;
        background-color: white;
        border: 2px solid white;
        border-radius: 8px;
        cursor: pointer;
      }

      .btn-edit {
        background-color: white;
        border: 2px solid #fff;
        padding: 5px;
      }

      .like-btn {
        color: black;
        font-size: 1.5rem;
        background-color: white;
        border: 2px solid white;
        border-radius: 8px;
        cursor: pointer;
      }

      .like-btn:hover {
        color: #4267b2;
      }

      @media screen and (max-width: 800px) {
        .plus {
          right: 5px;
        }

        .head {
          font-size: 3rem;
        }

        .blogs {
          width: auto;
        }

        .bai {
          padding: 15px 10px;
          max-width: 100%;
          width: auto;
        }
      }
    </style>
  </head>

  <body>
    <nav class="nav">
      <h1 class="head">Blog site</h1>

      <div class="icons">
        <!-- home -->

        <div class="dropdown">
          <a href="/feed" class="home"><i class="fas fa-home"></i></a>
          <div class="dropdown-content arrow-top">
            <p style="text-align: center; color: white">Feeds</p>
          </div>
        </div>
      </div>
    </nav>

    <div class="userInfo">
      <p class="user-name"><%= profile.name %></p>
      <p class="user-posts">Posts: <%= blogs.length %></p>
    </div>

    <section>
      <div class="blogs">
        <!-- all articles -->

        <% blogs.forEach(function (e) { %>
        <div class="bai">
          <!-- single article -->
          <div class="blog">
            <div class="blog-content">
              <!--author name-->
              <p class="written-by">
                <i
                  class="far fa-user"
                  style="margin-right: 5px; font-size: 18px"
                ></i>
                <%= e.name %>
              </p>
              <!-- title -->
              <a
                href="/readMore/<%= e.slug %>/<%= e.blogNumber %>"
                class="head1"
                ><%= e.title %></a
              >
              <!-- description -->
              <p class="para"><%= e.description %></p>

              <!-- date -->
              <p class="date"><%= e.createdAt %></p>

              <!-- no. of likes -->
              <p class="like">
                <i class="far fa-thumbs-up"></i> <%= e.likes %>
              </p>

              <div
                class="btns"
                style="
                  margin-top: 10px;
                  align-items: center;
                  justify-content: center;
                "
              >
                <!-- like button -->
                <form action="/like/<%= e.id %>?_method=PUT" method="POST">
                  <div class="dropdown">
                    <button type="submit" class="like-btn">
                      <i class="far fa-thumbs-up"></i>
                    </button>
                    <div class="dropdown-content1 arrow-top1">
                      <p style="text-align: center; color: white">Like</p>
                    </div>
                  </div>
                </form>
                <!-- comment button -->
                <div class="dropdown">
                  <a
                    class="like-btn"
                    href="/comment/<%= e.slug %>/<%= e.blogNumber %>"
                    style="margin-left: 5px"
                    ><i class="far fa-comment"></i
                  ></a>
                  <div class="dropdown-content1 arrow-top1">
                    <p style="text-align: center; color: white">Comment</p>
                  </div>
                </div>
              </div>
            </div>

            <% if(e.imageBase64) {%>

            <img
              src="data:<%= e.contentType %>;base64,<%= e.imageBase64 %>"
              height="150"
              width="150"
              style="margin: 15px"
            />

            <% } %>
          </div>
        </div>
        <%})%>
      </div>
    </section>
  </body>
</html>
